<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Title">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="70dp"
            android:layout_gravity="end"
            android:text="WHERE"
            android:textColor="#6495ed"
            android:textSize="80sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/주차장"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0E0E6"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:background="@drawable/ic__park"
            android:textColor="#090909"
            android:textSize="20sp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/주차장"
            android:background="#00FFFFFF"
            android:text="   주차장"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/주유소"
            android:background="#ADD8E6">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_gas"
                android:textColor="#090909"
                android:textSize="20sp"
                app:backgroundTint="#FFFFFF"
                app:backgroundTintMode="multiply" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/주유소"
                android:text="   주유소"
                android:background="#00FFFFFF"
                android:textStyle="bold"
                android:textSize="60sp"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/세차장"
            android:background="#87CEEB">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_carwash"
                android:textColor="#090909"
                android:textSize="20sp"
                app:backgroundTint="#FFFFFF"
                app:backgroundTintMode="multiply" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/세차장"
                android:text="   세차장"
                android:background="#00FFFFFF"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="60sp"
                android:layout_marginTop="25dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>